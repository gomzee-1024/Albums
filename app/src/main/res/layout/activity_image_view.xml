<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utils.gdkcorp.albums.activities.ImageViewActivity">
    <com.utils.gdkcorp.albums.customviews.MyViewPager
        android:visibility="gone"
        android:id="@+id/image_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
    </com.utils.gdkcorp.albums.customviews.MyViewPager>
    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/image_recycler_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/image_view_activity_rview"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_gravity="bottom">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_image_view"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent">
            <ImageView
                android:id="@+id/share_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_share_black_24dp"/>
            <ImageView
                android:id="@+id/delete_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:layout_marginEnd="48dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_delete_black_24dp"/>
        </FrameLayout>
    </android.support.v7.widget.Toolbar>
</FrameLayout>
